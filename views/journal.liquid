{% render 'partials/header.liquid', title:'Home' %}
<div class="grey-area">
    <h2 class="about-me">Journal</h2>
</div>

<div class="blue-line"></div>
<main>


<section class="about-section">
    <img class="banner-about" src="/assets/about/banner-about.png">
    <p>This is a journal where you can spot my process of how I develop my knowledge throughout my studies</p>

    <section class="journal-section">

    <article class="grey-area-journal">
        <div>
            <!-- background imgage -->
             <img src="assets/journal/rumikubboard.png" width="200px">
        </div>
            <div class="rumikkub-blocks">
                <img src="assets/journal/rumikub-01.png" width="50px">
                <img src="assets/journal/rumikub-02.png" width="50px">
                <img src="assets/journal/rumikub-03.png" width="50px">
                <img src="assets/journal/rumikub-04.png" width="50px">
                <img src="assets/journal/rumikub-05.png" width="50px">
                <img src="assets/journal/rumikub-06.png" width="50px">
                <img src="assets/journal/rumikub-07.png" width="50px">
                <img src="assets/journal/rumikub-08.png" width="50px">
                <img src="assets/journal/rumikub-09.png" width="50px">      
            </div>
        <div>

            {% for file in files %}
                <article>
                    <h2>
                        {{ file | slice: 0,-3 }}
                    </h2>
                    <button href-="learning-journal/{{ file | slice:0,-3 }}">{{ file | slice: 0,-3 }}</button>
                </article>
            {% endfor %}
        </div>
    </article>

</section>
</main>
    
{% render 'partials/footer.liquid' %}